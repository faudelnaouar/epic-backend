<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Welcom to Epic</h1>

        <%- include ("./partials/messages"); %>
        
        <form action="/users/login_sub" method="POST">
          <div class="form-group">
            <label for="email">Please enter your confirmed Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
            />
          </div>
          <div class="form-group" style="display: none;">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Enter Password"
              value="123456"
              
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">Login</button>
        </form>
       
      </div>
    </div>
  </div>